<h4>Project:&nbsp;<%= @project.title %></h4>

<%= form_for([@project, @item]) do |f| %>

  <% if @item.errors.any? %>
    <div id="notice" class="alert alert-danger alert-dismissible" role="alert">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      <div id="error_explanation">
        <% @item.errors.full_messages.each do |msg| %>
          <i class="fa fa-warning "></i> <%= msg %><br />
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :action, 'What needs to get done?'%><span class="text-muted"> (add new item)</span>
    <%= f.text_field :action, :size => "80", :class =>"form-control" %>
  </div>

  <ul class="list list-unstyled list-inline">
    <li><div class="actions"><%= f.submit 'Add New Item', :class => "btn btn-warning" %></div></li>
    <li><%= link_to 'cancel', @project, class: "btn btn-default" %></li>
  </ul>
<% end %>
